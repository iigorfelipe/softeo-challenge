{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "plugin:@typescript-eslint/recommended",
        "airbnb-base",
        "airbnb-typescript/base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": "./backend/tsconfig.json"
    },
    "plugins": [
        "@typescript-eslint"
      ],
    "rules": {
        "no-console": "off",
        "class-methods-use-this": ["error", { "enforceForClassFields": false }]
    }
}
